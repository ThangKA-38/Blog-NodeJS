    <section id="login" class="hide">
        <div class="modal-js">
            <!-- <div class="modal-container">
            </div> -->
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 flex text-align">
                        <div class="form_login">
                            <div class="login-close">
                                <button class="float-right btn btn-close"></button>
                            </div>
                            <div class="login_title">
                                <h3>LOG IN</h3>
                            </div>
                            <div class="text-align">
                                <form action="">
                                    <p class="mb8 mr180"><i class="fa-solid fa-user mr5"></i>Username:</p>
                                    <input type="text" class="mb20" placeholder="Username">
                                    <p class="mb8 mr180"><i class="fa-solid fa-lock mr5"></i>Password:</p>
                                    <input type="password" class="mb20" placeholder="Password">
                                    <button class="btn width btn_login">LOG IN</button>
                                </form>
                            </div>
                            <div class="help">
                                <div class="forgot-password">
                                    <button class="btn js-forgotPassword text-align">Forgot password?</a>
                                </div>
                            </div>
                            <div class="white">
                                <a href="" class="btn width facebook white"><i class="fa-brands fa-facebook ml-8"></i>Sign in with Facebook</a>
                            </div>
                            <div class="white">
                                <a href="" class="btn width google white"><i class="fa-brands fa-google ml-8"></i>Sign in with Google</a>
                            </div>
                            <div class="sign-up">
                                <p>If you dont have account<button class="js-register btn ml5">Sign up</button></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    <section id="register" class="hide">
        <div class="modal-js">
            <!-- <div class="modal-container">

            </div> -->
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 flex text-align">
                        <div class="form_register">
                            <div class="register-close">
                                <button class="float-right btn btn-close "></button>
                            </div>
                            <div class="register_title">
                                <h3>REGISTER</h3>
                            </div>
                            <div class="text-align">
                                <form action="">
                                    <p class="mb8 mr180"><i class="fa-solid fa-user mr5"></i>Username:</p>
                                    <input type="text" class="mb20" placeholder="Username">
                                    <p class="mb8 mr180"><i class="fa-solid fa-lock mr5"></i>Password:</p>
                                    <input type="password" class="mb20" placeholder="Password">
                                    <p class="mb8 mr103"><i class="fa-solid fa-lock mr5"></i>Confirm Password</p>
                                    <input type="password" class="mb20" placeholder="Confirm Password">
                                    <button class="btn width btn_register">Register</button>
                                </form>
                            </div>
                            <div class="white">
                                <a href="" class="btn width facebook white"><i class="fa-brands fa-facebook ml-8"></i>Sign in with Facebook</a>
                            </div>
                            <div class="white">
                                <a href="" class="btn width google white"><i class="fa-brands fa-google ml-8"></i>Sign in with Google</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="forgot-password" class="hide">
        <div class="modal-js">
            <!-- <div class="modal-container">

            </div> -->
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 flex text-align">
                        <div class="form_forgotPassword">
                            <div class="register-close">
                                <button class="float-right btn btn-close "></button>
                            </div>
                            <div class="forgotPassword_title">
                                <h3>FORGOT PASSWORD</h3>
                            </div>
                            <div class="text-align">
                                <form action="">
                                    <p class="mb8 mr188"><i class="fa-solid fa-user mr5"></i>Email:</p>
                                    <input type="text" class="mb20" placeholder="Email">

                                    <button class="btn width btn_register">Reset password</button>
                                </form>
                            </div>
                            <div class="white">
                                <a href="" class="btn width facebook white"><i class="fa-brands fa-facebook ml-8"></i>Sign in with Facebook</a>
                            </div>
                            <div class="white">
                                <a href="" class="btn width google white"><i class="fa-brands fa-google ml-8"></i>Sign in with Google</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        $(document).ready(function() {
            // find: tim the html hoac class hoac ID con
            $("button.js-login").click(function() {
                $("#login").removeClass("hide");
            })
            $("button.btn-close").click(function() {
                $("#login").addClass("hide")
            })
            $("button.js-register").click(function() {
                var check = $("#login").hasClass("hide")
                if (!check) {
                    $("#login").addClass("hide")
                    $("#register").removeClass("hide");

                }
            })
            $("button.btn-close").click(function() {
                $("#register").addClass("hide")
            })
            $("button.js-forgotPassword").click(function() {
                var check = $("#login").hasClass("hide")
                if (!check) {
                    $("#login").addClass("hide")
                    $("#forgot-password").removeClass("hide");
                }
            })
            $("button.btn-close").click(function() {
                $("#forgot-password").addClass("hide")
            })
        })
    </script>
